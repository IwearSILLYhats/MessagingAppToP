generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String      @id @default(uuid())
  email           String      @unique
  username        String      @unique
  password        String
  profile_img_url String?
  joined_date     DateTime    @default(now())
  last_activity   DateTime    @default(now())
  acct_status     acct_status @default(ACTIVE)

  // Represents friendships where this user is the 'initiator'
  friends     Friendship[] @relation("UserFriends")
  // Represents friendships where this user is the 'recipient'
  friendOf    Friendship[] @relation("FriendOfUser")
  Chat        Chat[]
  Message     Message[]
  owned_chats Chat[]       @relation("ChatOwner")
}

model Friendship {
  id         String        @id @default(uuid())
  friendChat Chat?         @relation(fields: [chatId], references: [id])
  user       User          @relation("UserFriends", fields: [user_id], references: [id])
  user_id    String
  friend     User          @relation("FriendOfUser", fields: [friend_id], references: [id])
  friend_id  String
  status     friend_status @default(ONE_PENDING_TWO) // e.g., PENDING, ACCEPTED, BLOCKED
  created_at DateTime      @default(now())
  chatId     String

  @@unique([user_id, friend_id])
}

model Chat {
  id           String       @id @default(uuid())
  owner        User         @relation("ChatOwner", fields: [user_id], references: [id])
  title        String
  users        User[]
  messages     Message[]
  img_url      String?
  last_message DateTime     @default(now())
  type         chat_type
  user_id      String
  friendships  Friendship[]
}

model Message {
  id          String   @id @default(uuid())
  author      User     @relation(fields: [user_id], references: [id])
  user_id     String
  content     String
  posted_date DateTime @default(now())
  image_url   String?
  Chat        Chat     @relation(fields: [chatId], references: [id])
  chatId      String
}

enum friend_status {
  // one is initiator and two is recipient
  ONE_PENDING_TWO
  TWO_PENDING_ONE
  DENIED
  ACCEPTED
  BLOCKED
  ONE_BLOCKED_TWO
  TWO_BLOCKED_ONE
}

enum acct_status {
  ACTIVE
  DEACTIVATED
}

enum chat_type {
  DIRECT
  GROUP
}
